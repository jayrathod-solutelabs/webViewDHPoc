<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consumption_nested_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">


    <com.solutelabs.webviewpoc.CustomWebView
        android:id="@+id/consumptionWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/scrollingRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivNewsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder_16_9"
            android:visibility="visible" />

        <include
            android:id="@+id/baseTitleContainer"
            layout="@layout/cardview_layout_consumption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNewsImage"
            android:layout_marginLeft="@dimen/margin_left_cardview_consumption"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="@dimen/margin_right_cardview_consumption"
            android:layout_marginBottom="@dimen/liveblogWebViewMarginTop" />


    </RelativeLayout>


    <TextView
        android:id="@+id/textViewRelated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/consumptionWebView"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/consumptionWebViewMarginLeft"
        android:layout_marginTop="@dimen/consumptionWebViewMarginTop"
        android:layout_marginRight="@dimen/consumptionWebViewMarginRight"
        android:lineSpacingExtra="8sp"
        android:maxLines="2"
        android:text="Related"
        android:textAlignment="center"
        android:textSize="@dimen/related_text_textsize"
        android:textStyle="bold"
        android:visibility="visible"
        tools:ignore="RtlCompat" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_viewType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRelated"
        android:layout_marginTop="10dp"
        android:visibility="visible"
         />




</RelativeLayout>

